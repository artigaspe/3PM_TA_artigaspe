<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TitlesActivity">

    <TextView
        android:id="@+id/txtChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/optimusprinceps"
        android:text="CHOOSE A GAME:"
        android:textColor="@color/orange_light"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgBtnDemons"
        android:layout_width="330dp"
        android:layout_height="150dp"
        android:layout_marginTop="64dp"
        android:background="#00000000"
        android:contentDescription="@string/hello_blank_fragment"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtChoose"
        app:srcCompat="@drawable/demons_souls_logo" />

    <ImageButton
        android:id="@+id/imgBtnDarkSouls"
        android:layout_width="330dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:background="#00000000"
        android:contentDescription="@string/hello_blank_fragment"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnDemons"
        app:srcCompat="@drawable/dark_souls_remastered" />
</androidx.constraintlayout.widget.ConstraintLayout>